{
    "root": true,
    // 禁止接着往上找
    "env": {
        "node": true,
        "es2021": true,
        "browser": true
        // 浏览器
    },
    "parser": "vue-eslint-parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "parser": "@typescript-eslint/parser",
        "ecmaFeatures": {
            "jsx": true
            // 启用 jsx
        }
    },
    "extends": [
        "eslint:recommended",
        // 内置规则
        "plugin:vue/vue3-recommended",
        ".eslintrc-auto-import.json"
    ],
    "rules": {
        "vue/multi-word-component-names": 0,
        // 引号
        "semi": [
            2,
            "never"
        ],
        // 禁止使用 var，而应该用 let 或 const
        "no-var": 2,
        // 禁用未使用变量
        "no-unused-vars": 2,
        // 数组空格
        "array-bracket-spacing": [
            2,
            "always"
        ],
        // 单引号
        "quotes": [
            2,
            "single"
        ],
        // 四空格间隔
        "indent": [
            2,
            4
        ],
        "vue/html-indent": [
            2,
            4
        ]
    }
}
